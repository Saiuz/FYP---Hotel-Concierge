<Page loaded="loaded">
	<ActionBar title="Guests LogIn" icon="res://ic_menu">
  <android>
    <NavigationButton icon="res://ic_menu" tap="showSideDrawer" />
  </android>
  </ActionBar>
  	<ScrollView>
        <StackLayout orientation="vertical">
            <Image src="~/images/concierge.jpg" stretch="none" horizontalAlignment="center"></Image>
            <TextField id="username" text="{{ username }}" hint="username" keyboardType="url" autocorrect="false" autocapitalizationType="none" />
            <TextField id="pw" secure="true" text="{{ password }}" hint="Password" />

            <Button text="Log In" tap="login" class="btn btn-outline"/>
            <Button text="Sign Up" tap="signup" class="btn btn-outline"/>
            <Button text="Switch to Service Provider" tap="ToServiceProvider" class="btn btn-outline"/>
        </StackLayout>
	</ScrollView>
</Page>